<h2>Search Authors</h2>
<form action="/authors" method="GET">
  <label>Name</label>
  <input type="text" name="name" value="<%= searchOptions.name %>" />
  <button type="submit">Search</button>
</form>
<br />
<!-- displays all the authors -->
<% authors.forEach(author => { %>
<div><%= author.name %></div>
<a href="/authors/<%= author.id %>">View</a>
<a href="/authors/<%= author.id %>/edit">Edit</a>
<!-- _method will tell the server that this is a DELETE request and not a POST request, 
which will then call the delete author router in the authors.js  -->
<%- include('../partials/deleteForm', { url: `/authors/${author.id}`}) %> 
<% }) %>
